#!/usr/bin/env python

# -*- coding: utf-8 -*-
import sys
import os

def args_check():
    msg = (
        'usage: dssg <source-directory>\n'
        'for more help, read the docs: https://github.com/atheiman/dssg/wiki'
    )
    if len(sys.argv) != 2 or not os.path.isdir(sys.argv[1]):
        raise SystemExit(msg)

if __name__ == '__main__':
    args_check()
    from dssg.generate import execute_from_command_line
    execute_from_command_line()
